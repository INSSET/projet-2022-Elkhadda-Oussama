{% extends 'base.html.twig' %}

{% block title %}la liste des Produits{% endblock %}

{% block body %}
    <div class="card">
            Liste des produits
    </div>
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Désignation</th>
                    <th>Déscription</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                </tr>
                </thead>
                <tbody>
                    {%  for product in products %}

                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ product.designation }}</td>
                            <td>{{ product.desciption }}</td>
                            <td>{{ product.prix }}</td>
                            <td>{{ product.quantite }}</td>
                        </tr>






                    {% endfor %}

                </tbody>

            </table>


        </div>


{% endblock %}
